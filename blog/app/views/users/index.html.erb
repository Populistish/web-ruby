<h1>Users</h1>
<table>
  <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Password</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <!-- aligator tag: a ruby way of writing inside -->
     <%#= this shows everything inside %>
     <%# this does not show the inside %>
    <tr>
      <td> <%= link_to user.first_name, user %> </td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td><%= link_to "edit", edit_user_path(user) %></td>
      <td><%= link_to "delete", user, method: :delete, data: {confirm: 'Are you sure'}  %></td>
      <!--link_to is get method, -->
    </tr>

    <% end %>
  </tbody>
</table>
